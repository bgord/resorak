<header
  data-display="flex"
  data-main="between"
  data-cross="center"
  data-p="24"
  data-md-py="24"
  data-md-px="12"
  data-bg="gray-800"
>
  <h1 data-fs="24" data-ls="2" data-color="gray-100" data-fw="500">resorak</h1>
  <a class="c-link" data-color="white" data-mr="12" data-md-mr="0" href="/">
    Homepage
  </a>
</header>

<main data-p="24" data-md-p="12" data-pt="72" data-md-pt="48" data-mx="auto">
  <form
    data-display="flex"
    data-direction="column"
    data-cross="center"
    data-mx="auto"
    data-p="24"
    data-md-py="24"
    data-md-px="12"
    data-bg="gray-100"
    data-bw="1"
    data-bc="gray-200"
    data-bwt="12"
    data-bct="gray-700"
    method="POST"
    action="/login"
    style="max-width: 450px"
  >
    <h2 data-fs="24" data-ls="1.5" data-fw="500" data-mb="36" data-mt="12">
      Login
    </h2>

    <input type="hidden" name="_csrf" value="{{ _csrf }}" />

    <div data-display="flex" data-direction="column" data-width="100%">
      <div data-display="flex" data-direction="column">
        <label class="c-label" for="username" data-fs="16" data-mb="6">
          Admin username
        </label>
        <input
          placeholder="john@example.com"
          class="c-input"
          id="username"
          name="username"
          pattern=".{3,}"
          title="Minimum 3 characters"
          autocomplete="off"
          required
          data-p="3"
        />
      </div>

      <div data-display="flex" data-direction="column" data-mt="24">
        <label class="c-label" for="password" data-fs="16" data-mb="6">
          Admin password
        </label>
        <input
          placeholder="*********"
          class="c-input"
          id="password"
          name="password"
          type="password"
          required
          data-p="3"
        />
      </div>

      <button
        class="c-button"
        data-variant="primary"
        type="submit"
        data-mt="24"
      >
        Login
      </button>
    </div>

    <a
      class="c-link"
      data-color="gray-600"
      data-mt="48"
      data-md-mt="24"
      href="/"
    >
      Back to homepage
    </a>
  </form>
</main>
