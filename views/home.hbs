<h1 data-ml="24">Resorak</h1>

<form method="POST" action="/create-rss" data-mx="24">
  <legend data-mb="24" data-fs="20">Create a Twitter RSS feed</legend>

  <input type="hidden" name="_csrf" value="{{ _csrf }}" />

  <div data-display="flex" data-direction="column">
    <label for="handle" data-mb="6" data-fs="16">Twitter handle</label>
    <input
      id="handle"
      name="handle"
      type="text"
      required
      data-mr="auto"
      data-p="3"
    />
  </div>

  <div data-display="flex" data-direction="column" data-mt="12">
    <label for="apiKey" data-mb="6" data-fs="16">API KEY</label>
    <input
      id="apiKey"
      name="apiKey"
      type="password"
      required
      data-mr="auto"
      data-p="3"
    />
  </div>

  <button type="submit" data-mt="24" data-py="6" data-px="24">Create</button>

  <div data-mt="12">{{ error }}</div>
</form>

<h2 data-ml="24" data-mt="72" data-fs="24">Existing Twitter RSS feeds</h2>

{{#unless feeds}}
<small data-ml="24">Create a feed above.</small>
{{/unless}}

<ul>
  {{#each feeds}}
  <li data-display="flex" data-cross="baseline" data-mb="12">
    {{ this.twitterUserName }}
    (ID:
    {{ this.twitterUserId }})
    <a href="{{ this.link }}" data-ml="12">{{ this.link }}</a>
    <button data-ml="12" type="button" class="copy" data-link="{{ this.link }}">
      Copy
    </button>
    <button
      data-ml="12"
      type="button"
      class="more"
      data-id="{{ this.twitterUserId }}"
    >
      More
    </button>
  </li>

  <form
    data-id="{{ this.twitterUserId }}"
    data-status="inactive"
    data-cross="end"
    method="POST"
    action="/delete-rss/{{ this.twitterUserId }}?_method=DELETE"
  >
    <input type="hidden" name="_csrf" value="{{../_csrf}}" />

    <div data-display="flex" data-direction="column">
      <label for="apiKey" data-mb="6" data-fs="16">API KEY</label>
      <input
        id="apiKey"
        name="apiKey"
        type="password"
        required
        data-mr="auto"
        data-p="3"
      />
    </div>

    <button type="submit" data-py="3" data-px="6" data-ml="12">Delete</button>
  </form>
  {{/each}}
</ul>

