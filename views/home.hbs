<header
  data-display="flex"
  data-main="between"
  data-cross="center"
  data-mt="24"
  data-px="12"
  data-bg="gray-200"
>
  <h1 data-fs="32">Resorak</h1>
  <a data-color="gray-600" data-mr="12" href="/login"> Dashboard </a>
</header>

<section
  data-display="flex"
  data-cross="baseline"
  data-main="between"
  data-mt="72"
  data-md-mt="48"
  data-md-px="12"
>
  <h2 data-fs="20" data-fw="500">Twitter RSS feeds</h2>
  <small
    data-md-mt="6"
    data-timestamp="{{ lastFeedlyHitTimestamp }}"
    class="timestamp"
  >
    Last Feedly hit at
  </small>
</section>

{{#unless feeds}}
<small data-px="12" data-mt="24">No feeds added at the moment</small>
{{/unless}}

<ul
  data-display="flex"
  data-direction="column"
  data-mt="24"
  data-px="24"
  data-pb="24"
  data-bg="gray-100"
  style="
    box-shadow: 0 1px 3px 0 rgb(0 0 0 / 0.1), 0 1px 2px -1px rgb(0 0 0 / 0.1);
  "
>
  {{#each feeds}}
  <li data-display="flex" data-mt="24">
    <div
      class="twitter-user-thumbnail"
      data-display="flex"
      data-mr="24"
      style="background-image: url('{{
        this.twitterUserThumbnail
      }}'), url('{{../twitterUserThumbnailPlaceholder}}')"
    ></div>

    <div data-display="flex" data-direction="column">
      <small data-feed-status="{{ this.status }}">{{ this.status }}</small>

      <div data-display="flex" data-cross="baseline">
        <span data-mr="12">{{ this.twitterUserName }}</span>
        <a href="{{ this.link }}" data-color="gray-700" data-mr="24">
          {{ this.link }}
        </a>
        <button
          type="button"
          class="copy"
          data-link="{{ this.link }}"
          data-px="6"
          data-py="3"
        >
          Copy
        </button>
      </div>

      <div data-display="flex" data-cross="center">
        <small
          class="timestamp"
          data-timestamp="{{ this.lastUpdatedAtTimestamp }}"
          data-mr="48"
        >
          Last updated at
        </small>

        <small>
          Active filters:
          {{#if this.skipReplyTweets}}
          skip reply tweets.
          {{else}}
          none.
          {{/if}}
        </small>
      </div>
    </div>
  </li>
  {{/each}}
</ul>
